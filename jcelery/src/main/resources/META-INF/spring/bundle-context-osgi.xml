<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.0.xsd" >

    <osgi:service interface="org.loadui.jcelery.JobService" ref="jobService"/>

    <osgi:service interface="org.loadui.jcelery.ConnectionProvider" ref="connectionProvider"/>

    <osgi:service interface="org.loadui.jcelery.MessageConsumer" ref="revokeConsumer">
        <service-properties>
            <entry key="type" value="revoke"/>
        </service-properties>
    </osgi:service>

    <osgi:service interface="org.loadui.jcelery.MessageConsumer" ref="invokeConsumer">
        <service-properties>
            <entry key="type" value="invoke"/>
        </service-properties>
    </osgi:service>

    <osgi:reference id="connection" interface="org.loadui.jcelery.ConnectionProvider" cardinality="0..1" />

    <osgi:reference id="anInvokeConsumer" interface="org.loadui.jcelery.MessageConsumer" cardinality="0..1" filter="(type=invoke)" />
    <osgi:reference id="anRevokeConsumer" interface="org.loadui.jcelery.MessageConsumer" cardinality="0..1" filter="(type=revoke)" />

</beans>
