<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="mq-host" class="java.lang.String">
        <constructor-arg value="loadlocal" />
    </bean>

    <bean id="connectionProvider" class="org.loadui.jcelery.base.RabbitProvider">
        <constructor-arg ref="mq-host"/>
    </bean>

    <bean id="revokeConsumer" class="org.loadui.jcelery.base.RabbitConsumer"/>
    <bean id="invokeConsumer" class="org.loadui.jcelery.base.RabbitConsumer"/>

    <bean id="revokeWorker" class="org.loadui.jcelery.worker.RevokeWorker">
        <constructor-arg ref="connection" />
        <constructor-arg ref="anyRevokeConsumer" />
    </bean>

    <bean id="invokeWorker" class="org.loadui.jcelery.worker.InvokeWorker">
        <constructor-arg ref="connection"/>
        <constructor-arg ref="anyInvokeConsumer"/>
    </bean>

    <bean id="jobService" class="org.loadui.jcelery.base.CeleryService">
        <constructor-arg ref="invokeWorker"/>
        <constructor-arg ref="revokeWorker"/>
    </bean>
</beans>
